@model Shopping_System.Models.tbl_Product
@{
    ViewBag.Title = "EditProduct";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-6">
            <img src="~/Images/addProduct.png" />
        </div>
        <div class="col-sm-6">
            @using (Html.BeginForm("EditProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(model=>model.ProductID)
                <div class="mb-3 mt-3">
                    <label>Product Name</label>
                    @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
                </div>
                <div class="mb-3 mt-3">
                    <label>Product Description</label>
                    @Html.TextBoxFor(model => model.ProductDescription, new { @class = "form-control" })
                </div>
                <div class="mb-3 mt-3">
                    <label>Product Price</label>
                    @Html.TextBoxFor(model => model.ProductPrice, new { @class = "form-control" })
                </div>
                <div class="mb-3 mt-3">
                    <label>Product Quantity</label>
                    @Html.TextBoxFor(model => model.ProductQuantity, new { @class = "form-control" })
                </div>
                <div class="mb-3 mt-3">
                    <label>select Image</label>
                    @* to display image to edit from add products *@
                    <img src="~/UploadeImages/@Model.ProductImage" alt="@Model.ProductName" style="width:50px;height:50px;" />
                    <input type="file" class="form-control" name="ImageUpload" placeholder="Choose Image" />
                </div>
                <div class="mb-3 mt-3">
                    <input type="submit" value="Add Product" class="btn btn-outline-secondary" onclick="return alert('Data addedd Successfully...')" />
                </div>
            }
        </div>
    </div>
</div>



