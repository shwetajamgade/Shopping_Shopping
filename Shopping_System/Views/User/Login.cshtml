@model Shopping_System.Models.tbl_Registration
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <img src="~/Images/login.png" />
        </div>
        <div class="col-sm-6">
            @using (Html.BeginForm("Login", "User", FormMethod.Post))
            {
                <form>
                    <h4>Login Form</h4>
                    <div class="mb-3 mt-3">
                        <label>UserName</label>
                        @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", @placeholder = "Enter UserName" })
                        @Html.ValidationMessageFor(model => model.Name, " ", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3 mt-3">
                        <label>Password</label>
                        @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Password" })
                        @Html.ValidationMessageFor(model => model.Password, " ", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3 mt-3">
                        <div class="col-md-2 mx-auto">
                            <input type="submit" value="Login" class="btn btn-primary" />
                            <a href="@Url.Action("Registration", "User", new {@class="nav-link btn btn-secondary "})">Registration</a>
                        </div>
                    </div>
                </form>
            }
        </div>

    </div>
</div>



